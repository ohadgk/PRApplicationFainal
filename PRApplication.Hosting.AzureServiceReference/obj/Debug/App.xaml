             xmlns:local="using:PRApplication.Hosting.AzureServiceReference">

    <Application.Resources>

        <SolidColorBrush x:Key="ListBoxFocusBackgroundThemeBrush" Color="Transparent" />
        <SolidColorBrush x:Key="ListBoxItemFocusBackgroundThemeBrush" Color="Transparent" />
